<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="se.ixdmaster.gabre.inobi_app.NewUser"
    android:background="#D6D6D6">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingBottom="30dp">

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/editText_newUser_name"
                    android:layout_gravity="bottom|center_horizontal"
                    android:gravity="center"
                    android:background="@drawable/text_back"
                    android:singleLine="true"
                    android:textSize="35dp"
                    android:cursorVisible="false"
                    android:inputType="textCapSentences"
                    android:maxLines="1" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView_newUser_name_wrong"
                    android:visibility="invisible"
                    android:layout_gravity="bottom|center_horizontal"
                    android:src="@drawable/text_back_wrong" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/editText_newUser_project"
                    android:background="@drawable/text_back"
                    android:inputType="textCapSentences"
                    android:maxLines="1"
                    android:linksClickable="false"
                    android:gravity="center"
                    android:layout_gravity="top|center_horizontal" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView_newUser_project_wrong"
                    android:src="@drawable/text_back_wrong"
                    android:layout_gravity="top|center_horizontal"
                    android:visibility="invisible"
                    android:focusableInTouchMode="false" />

            </FrameLayout>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>
